{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "npmClient": "pnpm",
  "useNx": true,
  "useWorkspaces": true,
  "version": "1.0.0-alpha.0",
  "command": {
    "version": {
      "allowBranch": ["main", "feat/*", "fix/*", "chore/*", "feat!/*"],
      "conventionalCommits": true,
      "createRelease": "github",
      "message": "Release %s",
      "tagVersionPrefix": ""
    }
  }
}
